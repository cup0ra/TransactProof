// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  walletAddress String    @unique @map("wallet_address")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  // Free generation fields
  freeGenerationsRemaining Int      @default(1) @map("free_generations_remaining")
  freeUntil                 DateTime? @map("free_until")
  
  // Relations
  receipts      Receipt[]
  sessions      Session[]
  branding      UserBranding?

  @@map("users")
}

model Nonce {
  id            String   @id @default(uuid())
  walletAddress String   @map("wallet_address")
  nonce         String   @unique
  used          Boolean  @default(false)
  createdAt     DateTime @default(now()) @map("created_at")
  expiresAt     DateTime @map("expires_at")

  @@map("nonces")
}

model Session {
  id               String   @id @default(uuid())
  userId           String   @map("user_id")
  jwtId            String   @unique @map("jwt_id")
  refreshToken     String?  @unique @map("refresh_token")
  createdAt        DateTime @default(now()) @map("created_at")
  expiresAt        DateTime @map("expires_at")
  refreshExpiresAt DateTime? @map("refresh_expires_at")
  
  // Relations
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Receipt {
  id          String    @id @default(uuid())
  userId      String?   @map("user_id")
  txHash      String    @map("tx_hash")
  sender      String
  receiver    String
  amount      Float
  token       String    @default("USDT")
  chainId     Int       @map("chain_id") @default(8453)
  pdfUrl      String    @map("pdf_url")
  description String?
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  
  // Relations
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("receipts")
}

// Stores persistent branding preferences for a user (used as fallback when request omits branding)
model UserBranding {
  id          String   @id @default(uuid())
  userId      String   @unique @map("user_id")
  companyName String?  @map("company_name") @db.VarChar(80)
  website     String?  @db.VarChar(120)
  // Stored as data URL (base64). Consider moving to file storage later if size becomes large.
  logoDataUrl String?  @map("logo_data_url") @db.Text
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_branding")
}
