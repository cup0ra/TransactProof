# Environment variables for NestJS API - Production Template

# Application
NODE_ENV=production
PORT=3001

# Database - Use PostgreSQL for production
DATABASE_URL="postgresql://username:password@localhost:5432/transactproof"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters-long-change-me-in-production"
SESSION_COOKIE_NAME=tp_session
SESSION_TTL_MIN=180

# Base Chain (Mainnet)
BASE_CHAIN_ID=8453
ALCHEMY_BASE_RPC="https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"

# Network RPC URLs - Replace with your API keys
ETHEREUM_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
BASE_RPC_URL="https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
ARBITRUM_RPC_URL="https://arb-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
OPTIMISM_RPC_URL="https://opt-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"
POLYGON_RPC_URL="https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_API_KEY"

# Production Contract Addresses - Update with mainnet addresses
SERVICE_USDT_ADDRESS="0xYOUR_MAINNET_SERVICE_ADDRESS"
SERVICE_ETH_ADDRESS="0xYOUR_MAINNET_SERVICE_ADDRESS"
USDT_CONTRACT="0xA0b86a33E6441E7C80D35dD4e4d0c4c6b0b6e0e4e"  # USDT on Base

# Storage Configuration
STORAGE_BUCKET=receipts-production
STORAGE_PUBLIC_URL="https://your-domain.com/api/receipts/files"

# SIWE Configuration
SIWE_DOMAIN="your-domain.com"
SIWE_STATEMENT="Sign in to TransactProof to generate PDF receipts for your crypto transactions"

# Rate Limiting - Adjust for production
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS - Update with your frontend domains
CORS_ORIGIN="https://your-frontend-domain.com,https://www.your-frontend-domain.com"

# Redis (Optional, for better performance)
REDIS_URL="redis://localhost:6379"

# Logging
LOG_LEVEL=info