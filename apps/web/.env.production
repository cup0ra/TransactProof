# Next.js Environment Variables - Production Template

# Application Environment
NODE_ENV=production

# API Configuration
NEXT_PUBLIC_API_URL="https://transactproof-dev.up.railway.app"
NEXT_PUBLIC_API_BASE_URL="https://your-api-domain.com/api"

# WalletConnect Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="your-walletconnect-project-id"

# Network Configuration
NEXT_PUBLIC_CHAIN_ID=8453  # Base Mainnet
NEXT_PUBLIC_NETWORK_NAME="Base"

# RPC Configuration (Public URLs for frontend)
NEXT_PUBLIC_BASE_RPC_URL="https://base-mainnet.g.alchemy.com/v2/YOUR_PUBLIC_API_KEY"
NEXT_PUBLIC_ETHEREUM_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/YOUR_PUBLIC_API_KEY"

# Contract Addresses
NEXT_PUBLIC_USDT_CONTRACT="0xA0b86a33E6441E7C80D35dD4e4d0c4c6b0b6e0e4e"
NEXT_PUBLIC_SERVICE_ADDRESS="0xYOUR_MAINNET_SERVICE_ADDRESS"

# SIWE Configuration
NEXT_PUBLIC_SIWE_DOMAIN="your-domain.com"

# Application URLs
NEXT_PUBLIC_APP_URL="https://your-domain.com"
NEXT_PUBLIC_WEBSITE_NAME="TransactProof"

# Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true

# Build Configuration
GENERATE_SOURCEMAP=false
NEXT_TELEMETRY_DISABLED=1